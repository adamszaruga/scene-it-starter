<div class="container">
    <div class="row">
        <div class="col-12 header text-center">
            <h2 class="display-2">Scene It</h2>
            <p>Search for movies you want to watch. Save them to your list.</p>
           
           
        </div>
    </div>
    <div class="row">
        <div class="col-12 search">
            <form id="search-form" name="search-form" action="/" method="GET">
                <div class="input-group input-group-lg">
                    <input class="form-control search-bar" placeholder="Search for a movie..." id="search-finder"> <button class="btn btn-primary input-group-btn" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12 results">

            <div class="movies-container card-columns">
                <%= moviename %>
                <div id="movie-cards"></div>
            </div>
        </div>
    </div>
</div>